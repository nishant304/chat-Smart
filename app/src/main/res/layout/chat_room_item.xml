<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/grey_bubble">

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@android:color/black"
            android:text="TextView"
            android:textSize="20sp"
            emojicon:emojiconSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtSender"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@drawable/purple_bubble">

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@android:color/white"
            android:text="TextView"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlImgLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivInImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rlLeft"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/rchatlogo"
             />

        <ProgressBar
            android:id="@+id/pbLeft"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlImgRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivOutImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rlLeft"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/rchatlogo"
             />

        <ProgressBar
            android:id="@+id/pbRight"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>

    <include layout="@layout/message_contact_layout"
        android:id="@+id/inContactLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true"
        >
    </include>

    <include layout="@layout/message_contact_layout"
        android:id="@+id/outContactLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        >
    </include>

</RelativeLayout>